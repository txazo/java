    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <compilerArgument>-parameters</compilerArgument>
                    <source>${jdk.compile.version}</source>
                    <target>${jdk.compile.version}</target>
                    <encoding>UTF-8</encoding>
                    <!--<compilerArguments>-->
                    <!--<verbose/>-->
                    <!--<bootclasspath>${java.home}/lib/rt.jar:${java.home}/lib/jce.jar</bootclasspath>-->
                    <!--</compilerArguments>-->
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>

                <executions>
                    <!-- attach-agent.jar -->
                    <execution>
                        <id>attach-agent</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <finalName>attach-agent</finalName>
                            <includes>
                                <include>org/txazo/jvm/attach/**</include>
                            </includes>
                            <archive>
                                <manifestEntries>
                                    <Agent-Class>org.txazo.jvm.attach.AttachAgent</Agent-Class>
                                </manifestEntries>
                            </archive>
                        </configuration>
                    </execution>

                    <!-- objectsize-agent.jar -->
                    <execution>
                        <id>objectsize-agent</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <finalName>objectsize-agent</finalName>
                            <includes>
                                <include>org/txazo/jvm/object/size/**</include>
                            </includes>
                            <archive>
                                <manifestEntries>
                                    <Premain-Class>org.txazo.jvm.object.size.ObjectSize</Premain-Class>
                                </manifestEntries>
                            </archive>
                        </configuration>
                    </execution>

                    <!-- dynamic-bytecode-agent.jar -->
                    <execution>
                        <id>dynamic-bytecode-agent</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <finalName>dynamic-bytecode-agent</finalName>
                            <includes>
                                <include>org/txazo/jvm/instrument/**</include>
                            </includes>
                            <archive>
                                <manifestEntries>
                                    <Can-Retransform-Classes>true</Can-Retransform-Classes>
                                    <Premain-Class>org.txazo.jvm.instrument.DynamicBytecodeAgent</Premain-Class>
                                </manifestEntries>
                            </archive>
                        </configuration>
                    </execution>

                    <!-- wordcount.jar -->
                    <execution>
                        <id>wordcount</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <finalName>wordcount</finalName>
                            <includes>
                                <include>org/txazo/hadoop/wordcount/**</include>
                            </includes>
                            <archive>
                                <manifestEntries>
                                    <Main-Class>org.txazo.hadoop.wordcount.WordCount</Main-Class>
                                </manifestEntries>
                            </archive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
